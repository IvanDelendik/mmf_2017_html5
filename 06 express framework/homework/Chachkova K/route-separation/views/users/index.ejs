<% include ../header %>

<h1><%= title %></h1>

<div id="users">
  <% users.forEach(function(user, index) { %>
    <li>
      <a href="/user/<%= index %>"><%= user.name %></a>
      <a href="/user/<%= index %>/edit">edit</a>
    </li>
  <% }) %>

</div>

<form action="?_method=put", method="post">
  <h1>Add new user:</h1>
    <p>
      Name:
      <input type="text" placeholder="name" name="newUser[name]" />
    </p>

    <p>
      Email:
      <input type="email"  placeholder="email" name="newUser[email]" />
    </p>

    <p>
      <input type="submit" value="Save" />
    </p>
</form>

<% include ../footer %>
